{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Available Joins Schema",
  "description": "A definition of available entity types and fields for joining with a custom entity type",
  "type": "object",
  "AvailableJoinsRequest": {
    "type": "object",
    "properties": {
      "sources": {
        "type": "array",
        "items": {
          "$ref": "entityTypeSourceEntityType.json"
        }
      },
      "targetId": {
        "description": "UUID of the target entity type",
        "$ref": "common.json#/UUID"
      }
    }
  },
  "AvailableJoinsResponse": {
    "properties": {
      "availableTargetIds": {
        "description": "Available target entity types that can be joined with the custom entity type",
        "type": "array",
        "items": {
          "$ref": "#/LabeledValueWithDescription"
        }
      },
      "availableJoinConditions": {
        "description": "Available join conditions between the source and target entity types, as a pair of source and target field values",
        "type": "array",
        "items": {
          "$ref": "#/JoinFieldPair"
        }
      }
    }
  },
  "LabeledValue": {
    "properties": {
      "label": {
        "type": "string",
        "description": "Human-readable label"
      },
      "value": {
        "type": "string"
      }
    },
    "required": [
      "id",
      "label"
    ]
  },
  "LabeledValueWithDescription": {
    "allOf": [
      {
        "$ref": "#/LabeledValue"
      },
      {
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the value"
          }
        },
        "required": []
      }
    ]
  },
  "JoinFieldPair": {
    "properties": {
      "sourceField": {
        "$ref": "#/LabeledValue"
      },
      "targetField": {
        "$ref": "#/LabeledValue"
      }
    },
    "required": [
      "sourceField",
      "targetField"
    ]
  }
}
